<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.0.1.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		<title lang="en">Annual Stars</title>
		<description lang="en">Users get a star for each year of their membership.</description>
		<author-notes lang="en">This MOD was originally a phpBB 2.0 MOD by drathbun. It can be found here: http://www.phpbb.com/community/viewtopic.php?t=384941  The star image is also taken from that MOD. It was created by Dave Rathbun.  I recreated it for phpBB 3.0, as i needed if for my board.  Don't forget to refresh your imagesets after installation. </author-notes>
		<author-group>
			<author>
				<realname>Igor Wiedler</realname>
				<email>evil@phpbbmodders.net</email>
				<username>evil3</username>
				<homepage>http://phpbbmodders.net</homepage>
			</author>
		</author-group>
		<mod-version>
			<major>1</major>
			<minor>0</minor>
			<revision>1</revision>
			<release>a</release>
		</mod-version>
		<installation>
			<level>easy</level>
			<time>180</time>
			<target-version>
				<target-primary>3.0.0</target-primary>
				<target-major allow="exact">3</target-major>
				<target-minor allow="exact">0</target-minor>
				<target-revision allow="after-equal">0</target-revision>
			</target-version>
		</installation>
		<history>
			<entry>
				<date>2007-11-11</date>
				<rev-version>
					<major>1</major>
					<minor>0</minor>
					<revision>0</revision>
				</rev-version>
				<changelog lang="en">
					<change>Initial release</change>
				</changelog>
			</entry>
			<entry>
				<date>2008-04-25</date>
				<rev-version>
					<major>1</major>
					<minor>0</minor>
					<revision>1</revision>
				</rev-version>
				<changelog lang="en">
					<change>Fixed ammount of years</change>
				</changelog>
			</entry>
			<entry>
				<date>2008-05-04</date>
				<rev-version>
					<major>1</major>
					<minor>0</minor>
					<revision>1</revision>
					<release>a</release>
				</rev-version>
				<changelog lang="en">
					<change>Added changes to the xml</change>
				</changelog>
			</entry>
		</history>
	</header>
	<action-group>
		<copy>
			<file from="root/styles/prosilver/imageset/icon_annual_star.gif" to="styles/prosilver/imageset/icon_annual_star.gif"/>
		</copy>
		<open src="memberlist.php">
			<edit>
				<find>	// Dump it out to the template
	return array(</find>
				<action type="before-add">	// annual stars
	$reg_stars = '';
	if ($reg_years = (int) ((time() - (int) $data['user_regdate']) / 31536000))
	{
		$reg_stars = str_repeat($user-&gt;img('icon_annual_star', 'YEARS_OF_MEMBERSHIP'), $reg_years);
	}</action>
			</edit>
			<edit>
				<find>		'WARNINGS'		=&gt; isset($data['user_warnings']) ? $data['user_warnings'] : 0,</find>
				<action type="after-add">		// annual stars
		'MEMBERSHIP_STARS'	=&gt; $reg_stars,</action>
			</edit>
		</open>
		<open src="viewtopic.php">
			<edit>
				<find>				'allow_pm'			=&gt; 0,
			);</find>
				<action type="after-add">			// annual stars
			$user_cache[$poster_id]['reg_stars'] = '';</action>
			</edit>
			<edit>
				<find><![CDATA[				'search'		=> ($auth->acl_get('u_search')) ? append_sid("{$phpbb_root_path}search.$phpEx", 'search_author=' . urlencode($row['username']) .'&amp;showresults=posts') : '',
			);]]></find>
				<action type="after-add">			// annual stars
			$user_cache[$poster_id]['reg_stars'] = '';
			if ($reg_years = (int) ((time() - (int) $row['user_regdate']) / 31536000))
			{
				$user_cache[$poster_id]['reg_stars'] = str_repeat($user-&gt;img('icon_annual_star', 'YEARS_OF_MEMBERSHIP'), $reg_years);
			}</action>
			</edit>
			<edit>
				<find>		'POSTER_AGE'		=&gt; $user_cache[$poster_id]['age'],</find>
				<action type="after-add">		// annual stars
		'MEMBERSHIP_STARS'	=&gt; $user_cache[$poster_id]['reg_stars'],</action>
			</edit>
		</open>
		<open src="includes/acp/acp_styles.php">
			<edit>
				<find>		// Execute overall actions
		switch ($action)</find>
				<action type="before-add">		// annual stars
		$this-&gt;imageset_keys['icons'][] = 'icon_annual_star';</action>
			</edit>
		</open>
		<open src="language/en/common.php">
			<edit>
				<find>?&gt;</find>
				<action type="before-add">// annual stars
$lang['YEARS_OF_MEMBERSHIP'] = 'Years of membership';</action>
			</edit>
		</open>
		<open src="styles/prosilver/imageset/imageset.cfg">
			<edit>
				<find>img_icon_user_warn = icon_user_warn.gif*20*20</find>
				<action type="after-add">img_icon_annual_star = icon_annual_star.gif</action>
			</edit>
		</open>
		<open src="styles/prosilver/template/memberlist_view.html">
			<edit>
				<find><![CDATA[			<dt>{L_JOINED}:</dt> <dd>{JOINED}</dd>]]></find>
				<action type="after-add"><![CDATA[			<!-- IF MEMBERSHIP_STARS -->
				<dt>{L_YEARS_OF_MEMBERSHIP}:</dt> <dd>{MEMBERSHIP_STARS}</dd>
			<!-- ENDIF -->]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/viewtopic_body.html">
			<edit>
				<find><![CDATA[		<dd>&nbsp;</dd>]]></find>
				<action type="before-add"><![CDATA[			<!-- IF postrow.MEMBERSHIP_STARS -->
				<dd>&nbsp;</dd>
				<dd>{postrow.MEMBERSHIP_STARS}</dd>
			<!-- ENDIF -->]]></action>
			</edit>
		</open>
	</action-group>
</mod>